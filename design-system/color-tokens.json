{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Megalithic Mapper Design Tokens",
  "description": "Design tokens for the Megalithic Mapper application. HSL format for CSS variables.",
  
  "light": {
    "background": { "hsl": "0 0% 98%", "hex": "#FAFAFA", "rgb": "250, 250, 250" },
    "foreground": { "hsl": "220 20% 15%", "hex": "#1F2937", "rgb": "31, 41, 55" },
    "card": { "hsl": "0 0% 100%", "hex": "#FFFFFF", "rgb": "255, 255, 255" },
    "card-foreground": { "hsl": "220 20% 15%", "hex": "#1F2937", "rgb": "31, 41, 55" },
    "popover": { "hsl": "0 0% 100%", "hex": "#FFFFFF", "rgb": "255, 255, 255" },
    "popover-foreground": { "hsl": "220 20% 15%", "hex": "#1F2937", "rgb": "31, 41, 55" },
    "primary": { "hsl": "23 94% 52%", "hex": "#F97316", "rgb": "249, 115, 22" },
    "primary-foreground": { "hsl": "0 0% 100%", "hex": "#FFFFFF", "rgb": "255, 255, 255" },
    "secondary": { "hsl": "220 10% 94%", "hex": "#EDEFF3", "rgb": "237, 239, 243" },
    "secondary-foreground": { "hsl": "220 20% 25%", "hex": "#343D4D", "rgb": "52, 61, 77" },
    "muted": { "hsl": "220 10% 94%", "hex": "#EDEFF3", "rgb": "237, 239, 243" },
    "muted-foreground": { "hsl": "220 10% 45%", "hex": "#676E7D", "rgb": "103, 110, 125" },
    "accent": { "hsl": "45 100% 50%", "hex": "#FACC15", "rgb": "250, 204, 21" },
    "accent-foreground": { "hsl": "220 20% 10%", "hex": "#141A24", "rgb": "20, 26, 36" },
    "destructive": { "hsl": "0 84% 60%", "hex": "#EF4444", "rgb": "239, 68, 68" },
    "destructive-foreground": { "hsl": "0 0% 100%", "hex": "#FFFFFF", "rgb": "255, 255, 255" },
    "border": { "hsl": "220 15% 88%", "hex": "#DDE1E9", "rgb": "221, 225, 233" },
    "input": { "hsl": "220 15% 88%", "hex": "#DDE1E9", "rgb": "221, 225, 233" },
    "ring": { "hsl": "23 94% 52%", "hex": "#F97316", "rgb": "249, 115, 22" }
  },
  
  "dark": {
    "background": { "hsl": "220 20% 4%", "hex": "#08090D", "rgb": "8, 9, 13" },
    "foreground": { "hsl": "210 20% 93%", "hex": "#E8ECF1", "rgb": "232, 236, 241" },
    "card": { "hsl": "220 18% 9%", "hex": "#121620", "rgb": "18, 22, 32" },
    "card-foreground": { "hsl": "210 20% 93%", "hex": "#E8ECF1", "rgb": "232, 236, 241" },
    "popover": { "hsl": "220 18% 9%", "hex": "#121620", "rgb": "18, 22, 32" },
    "popover-foreground": { "hsl": "210 20% 93%", "hex": "#E8ECF1", "rgb": "232, 236, 241" },
    "primary": { "hsl": "23 94% 58%", "hex": "#FB923C", "rgb": "251, 146, 60" },
    "primary-foreground": { "hsl": "26 100% 96%", "hex": "#FFF7ED", "rgb": "255, 247, 237" },
    "secondary": { "hsl": "220 15% 15%", "hex": "#212633", "rgb": "33, 38, 51" },
    "secondary-foreground": { "hsl": "210 20% 93%", "hex": "#E8ECF1", "rgb": "232, 236, 241" },
    "muted": { "hsl": "220 15% 15%", "hex": "#212633", "rgb": "33, 38, 51" },
    "muted-foreground": { "hsl": "215 15% 55%", "hex": "#7B8599", "rgb": "123, 133, 153" },
    "accent": { "hsl": "45 100% 65%", "hex": "#FFD54F", "rgb": "255, 213, 79" },
    "accent-foreground": { "hsl": "220 20% 4%", "hex": "#08090D", "rgb": "8, 9, 13" },
    "destructive": { "hsl": "0 72% 51%", "hex": "#DC2626", "rgb": "220, 38, 38" },
    "destructive-foreground": { "hsl": "210 40% 98%", "hex": "#F8FAFC", "rgb": "248, 250, 252" },
    "border": { "hsl": "220 15% 18%", "hex": "#272D3D", "rgb": "39, 45, 61" },
    "input": { "hsl": "220 15% 18%", "hex": "#272D3D", "rgb": "39, 45, 61" },
    "ring": { "hsl": "23 94% 58%", "hex": "#FB923C", "rgb": "251, 146, 60" }
  },
  
  "semantic": {
    "success": { "hsl": "142 76% 36%", "hex": "#16A34A", "description": "Success states" },
    "warning": { "hsl": "38 92% 50%", "hex": "#F59E0B", "description": "Warning states" },
    "info": { "hsl": "199 89% 48%", "hex": "#0EA5E9", "description": "Informational" },
    "purple": { "hsl": "280 65% 60%", "hex": "#A855F7", "description": "Alternative accent" }
  },
  
  "typography": {
    "fonts": {
      "sans": {
        "name": "Inter",
        "fallback": "system-ui, -apple-system, sans-serif",
        "usage": "Body text, UI elements"
      },
      "serif": {
        "name": "Playfair Display",
        "fallback": "Georgia, serif",
        "usage": "Headings, display text"
      }
    },
    "scale": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    }
  },
  
  "spacing": {
    "radius": "0.75rem",
    "radius-md": "0.5rem",
    "radius-sm": "0.25rem"
  }
}












